@import 'nib'

.cloud-poll-results
  height 100%

  box-sizing border-box

  .layout
    height 100%
    display flex
    flex-flow row wrap

    align-content center

    font-family 'ProximaNova'
    color white

    > .winner
      flex-basis 50%
      margin-bottom 55px
      flex-grow 1

      > .name
        font-weight 500
        font-size 48px

      > .votes
        opacity 0.9
        font-size 24px

      opacity 0
      transition all 0.3s ease
      @keyframes explos
        0%
          transform scale(1.0, 1.0)

        60%
          transform scale(1.5, 1.5)
        90%
          transform scale(0.95, 0.95)
        100%
          transform scale(1.0, 1.0)

      &.shown
        animation explos 0.5s
        animation-timing-function ease

        opacity 1

    &.large
      .winner
        flex-basis 100%

    &.small
      .winner
        flex-basis 33.3%
        margin-bottom 30px
        .name
          font-size 32px
        .votes
          font-size 20px