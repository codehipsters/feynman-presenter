.pdf-presentation
  width 100%
  height 100vh
  position relative
  z-index -1
  
  canvas
    display block
    margin 0 auto

.poll-wrapper
  text-align center

.poll-wrapper:before
  content '';
  display inline-block
  height 100%
  vertical-align middle
  margin-right -0.25em

.participants-wrapper
  text-align center
  
.participants-wrapper:before
  content '';
  display inline-block
  height 100%
  vertical-align middle
  margin-right -0.25em

.participants-wrapper
  position absolute
  width 100%
  height 100vh
  top 0
  
  .participants
    display inline-block
    vertical-align middle
    width 960px
    height 700px
    overflow visible
    z-index 1
    
    h4
      font-size 36px
      margin 0 0 20px
      color #000
      font-family ProximaNova,'Roboto Slab',Impact,sans-serif
      line-height .9em
      letter-spacing .02em
      text-transform none
      text-shadow none
    
    h2
      font-weight 700
      font-size 76 !important
      color #000
      font-family ProximaNova,'Roboto Slab',Impact,sans-serif

.poll-wrapper
  position absolute
  width 100%
  height 100vh
  top 0
  
  .naming-poll
    display inline-block
    vertical-align middle
    width 960px
    height 700px
    overflow visible
    z-index 1
    
    h4 
      margin 0 0 20px
      color #000
      font-family ProximaNova,'Roboto Slab',Impact,sans-serif
      line-height .9em
      letter-spacing 1px
      text-transform none
      text-shadow none
      font-size 36px
      
    h5
      font-family ProximaNova,'Roboto Slab',Impact,sans-serif
      font-size 20px
      color #777
  
  .poll-results
    display inline-block
    vertical-align middle
    width 960px
    height 700px
    overflow visible
    z-index 1
    
    h1
      color #fff
      font-family ProximaNova,'Roboto Slab',Impact,sans-serif
      font-weight 700
      font-size 135px
      line-height 660px
      margin 0 0 40px 0